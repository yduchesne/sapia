<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Soto Regis integration</name>
  <description>Integrates the Regis configuration framework</description>
  <url>http://www.sapia-oss.org/projects/soto/subprojects/scheduler/index.html</url>
  <artifactId>sapia_soto_regis</artifactId>

  <parent>
    <groupId>org.sapia</groupId>
    <artifactId>sapia_soto_parent</artifactId>
    <version>3.2</version>
  </parent>

  <build>
    <directory>target</directory>
    <outputDirectory>target/classes</outputDirectory>
    <finalName>${artifactId}-${version}</finalName>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <sourceDirectory>java/src</sourceDirectory>
    <testSourceDirectory>java/test</testSourceDirectory>
    <resources>
      <resource>
        <directory>java/src</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>java/test</directory>
      </testResource>
    </testResources>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.sapia</groupId>
      <artifactId>sapia_soto</artifactId>
    </dependency>
    <dependency>
      <groupId>org.sapia</groupId>
      <artifactId>sapia_regis</artifactId>
    </dependency>

  </dependencies>

</project>
