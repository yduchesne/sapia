<soto:app 
  xmlns:soto="sapia:soto"
  xmlns:freemarker="soto:freemarker">

  <soto:service>
    <freemarker:configuration 
      localized="false"
      updateDelay="10000">
      
      <root>${user.dir}/etc/freemarker/templates</root>
      
      <setting name="locale" 
               value="en" />
               
    </freemarker:configuration>
  </soto:service>  

</soto:app>