<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Sapia Vlad</name>
  <description>A validation framework</description>
  <url>http://www.sapia-oss.org/projects/vlad/index.html</url>
  <groupId>org.sapia</groupId>
  <artifactId>sapia_vlad</artifactId>
  <version>2.1-SNAPSHOT</version>

  <parent>
    <groupId>org.sapia</groupId>
    <artifactId>sapia_global</artifactId>
    <version>1.7</version>
  </parent>

  <scm>
    <connection>scm:svn:http://sapia.googlecode.com/svn/tags</connection>
    <developerConnection>scm:svn:https://sapia.googlecode.com/svn/tags</developerConnection>
    <url>scm:svn:https://sapia.googlecode.com/svn/tags</url>
  </scm>

  <packaging>jar</packaging>

  <mailingLists>
    <mailingList>
      <name>User List</name>
      <subscribe>http://groups.google.com/group/sapia-tools-users</subscribe>
      <unsubscribe>http://groups.google.com/group/sapia-tools-users</unsubscribe>
      <post>sapia-tools-users@googlegroups.com</post>
      <archive>http://groups.google.com/group/sapia-tools-users/topics</archive>
    </mailingList>
  </mailingLists>

  <dependencies>
    <dependency>
        <groupId>org.sapia</groupId>
        <artifactId>sapia_utils</artifactId>
        <version>1.8</version>
    </dependency>
    <dependency>
        <groupId>commons-beanutils</groupId>
        <artifactId>commons-beanutils</artifactId>
        <version>1.8.3</version>
    </dependency>

    <dependency>
        <groupId>org.codehaus.groovy</groupId>
        <artifactId>groovy-all-minimal</artifactId>
        <version>1.5.8</version>
    </dependency>

  </dependencies>

  <build>
    <directory>target</directory>
    <outputDirectory>target/classes</outputDirectory>
    <finalName>${artifactId}-${version}</finalName>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <sourceDirectory>java/src</sourceDirectory>
    <testSourceDirectory>java/test</testSourceDirectory>
    <resources>
      <resource>
        <directory>java/src</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>java/test</directory>
      </testResource>
    </testResources>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/Test**</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>

  </build>
</project>
