<assembly>
  <id>linux64</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    
    <!-- bin -->
    <fileSet>
       <directory>bin</directory>
       <includes>
          <include>*</include>
       </includes>
       <excludes>
          <exclude>*.bat</exclude>
          <exclude>*/linux*</exclude>
          <exclude>*/osx*</exclude>
          <exclude>*/solaris*</exclude>
          <exclude>*/win*</exclude>
       </excludes>
       <fileMode>0777</fileMode>
       <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
       <directory>bin/linux64</directory>
       <outputDirectory>bin</outputDirectory>
       <includes>
          <include>wrapper</include>
       </includes>
       <fileMode>0777</fileMode>
    </fileSet>
    
    <!-- config -->
    <fileSet>
       <directory>config</directory>
       <includes>
          <include>*.*</include>
       </includes>
       <lineEnding>unix</lineEnding>
    </fileSet>

    <!-- doc -->
    <fileSet>
       <directory>doc/text</directory>
       <includes>
          <include>*.pdf</include>
       </includes>
    </fileSet>
    
    <!-- lib -->
    <fileSet>
       <directory>lib</directory>
       <includes>
          <include>**/*</include>
       </includes>
       <excludes>
          <exclude>**/wrapper*.jar</exclude>
       </excludes>
    </fileSet>
    <fileSet>
       <directory>lib/server</directory>
       <outputDirectory>lib/wrapper</outputDirectory>
       <includes>
          <include>wrapper*.jar</include>
       </includes>
    </fileSet>
    <fileSet>
       <directory>bin/linux64</directory>
       <outputDirectory>lib/wrapper</outputDirectory>
       <includes>
          <include>libwrapper.so</include>
       </includes>
       <fileMode>0777</fileMode>
    </fileSet>

  </fileSets>
  
</assembly>