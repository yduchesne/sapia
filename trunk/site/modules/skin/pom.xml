    <modelVersion>4.0.0</modelVersion>
    <groupId>org.sapia</groupId>
    <artifactId>skin</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>Sapia Skin</name>
    <description>Based on the Fuido skin: http://code.google.com/p/fluido-skin/</description>
    <url>http://code.google.com/p/fluido-skin/</url>
    <inceptionYear>2009</inceptionYear>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>

            <resource>
                <directory>.</directory>
                <targetPath>META-INF</targetPath>
                <includes>
                    <include>LICENSE</include>
                    <include>NOTICE</include>
                    <include>doap_fluido-skin.rdf</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
