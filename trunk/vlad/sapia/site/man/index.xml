<manual title="Rule Reference">
  <description>
   <b>This manual holds the descriptions of currently available rules, categorized by namespace.
   Typically, each namespace corresponds to an implementor. If you have implemented rules
   that can be of use to the community, do not keep them to yourself; tell us about them
   and we will make them part of Vlad, under a namespace assigned to you.</b>
  </description>

  <namespace prefix="vlad" uri="http://www.sapia-oss.org/vlad/rules">
    <description>The rules in this namespace are configured in the
    <b>vlad_rule.xml</b> file that is part of the Vlad distribution
    and are therefore automatically made available to applications.
    </description>
    
    <category name="Control flow">
      <rule name="forEach" link="vlad/foreach.html"/>
      <rule name="select" link="vlad/select.html"/>
      <rule name="ifDefined" link="vlad/ifDefined.html"/>      
    </category>
    
    <category name="Minimums and Maximums">
      <rule name="minSize" link="vlad/minsize.html"/>
      <rule name="maxSize" link="vlad/maxsize.html"/>
      <rule name="minLen" link="vlad/minlen.html"/>
      <rule name="maxLen" link="vlad/maxlen.html"/>  
      <rule name="minInt" link="vlad/minprimitive.html"/>
      <rule name="maxInt" link="vlad/maxprimitive.html"/>
      <rule name="minLong" link="vlad/minprimitive.html"/>
      <rule name="maxLong" link="vlad/maxprimitive.html"/>
      <rule name="minFloat" link="vlad/minprimitive.html"/>
      <rule name="maxFloat" link="vlad/maxprimitive.html"/>
      <rule name="minDouble" link="vlad/minprimitive.html"/>
      <rule name="maxDouble" link="vlad/maxprimitive.html"/>      
    </category>

    <category name="Scripting">
      <rule name="groovy" link="vlad/groovy.html"/>
    </category>    
    
    <category name="Misc">
      <rule name="mandatory" link="vlad/mandatory.html"/>
      <rule name="mandatoryStr" link="vlad/mandatoryStr.html"/>
      <rule name="regExp" link="vlad/regEx.html"/>      
    </category>

  </namespace>


</manual>