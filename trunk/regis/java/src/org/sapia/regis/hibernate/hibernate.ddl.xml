<hibernate-configuration>

  <session-factory>

    <property name="dialect">${hibernate.dialect}</property>   
    <property name="connection.driver_class">${hibernate.connection.driver_class}</property>
    <property name="connection.url">${hibernate.connection.url}</property>
    <property name="connection.username">${hibernate.connection.username}</property>
    <property name="connection.password">${hibernate.connection.password}</property>
    
    <property name="hibernate.c3p0.min_size">${hibernate.c3p0.min_size}</property>
    <property name="hibernate.c3p0.max_size">${hibernate.c3p0.max_size}</property>
    <property name="hibernate.c3p0.timeout">${hibernate.c3p0.timeout}</property>
    <property name="hibernate.c3p0.max_statements">${hibernate.c3p0.max_statements}</property>    
    
    <property name="hibernate.jdbc.batch_size">${hibernate.jdbc.batch_size}</property>

    <property name="hibernate.cache.use_query_cache">true</property>    
    <property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.EhCacheProvider</property>
    <property name="net.sf.ehcache.configurationResourceName">/org/sapia/regis/impl/ehcache.xml</property>
   
    <collection-cache collection="org.sapia.regis.impl.NodeImpl.childrenMap" usage="read-write"/>
    <collection-cache collection="org.sapia.regis.impl.NodeImpl.appendedLinks" usage="read-write"/>
    <collection-cache collection="org.sapia.regis.impl.NodeImpl.prependedLinks" usage="read-write"/>
    <collection-cache collection="org.sapia.regis.impl.NodeImpl.includes" usage="read-write"/>    

    <property name="hibernate.show_sql">${hibernate.show_sql}</property>
    
    <property name="hbm2ddl.auto">${hbm2ddl.auto}</property>    
  </session-factory>

</hibernate-configuration>    