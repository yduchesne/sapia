<project name="soto" basedir="." xmlns:savant="inversoft:savant">

  <property name="corus.iop.version" value="1.7.1" />

  <target name="do-get-libs">

    <delete includeEmptyDirs="true">
      <fileset dir="${project.libraryDir}" includes="**/*" />
      <fileset dir="${project.magnet-libraryDir}" includes="**/*" />
      <fileset dir="${project.demo-libraryDir}" includes="**/*" />
      <fileset dir="${project.vmBootLibDir}" includes="**/*" />
    </delete>
    <savant:dependency>
      <savant:artifactgroup id="buildtime_libs">
        <savant:artifact group="junit" projectname="junit" name="junit" version="3.8.1" type="jar"/>      
      </savant:artifactgroup>

      <savant:artifactgroup id="demo_libs"> 
        <savant:artifact group="dom4j"   projectname="dom4j"     name="dom4j"           version="1.6"   type="jar"/>
        <savant:artifact group="sapia"   projectname="corus_iop" name="sapia_corus_iop" version="${corus.iop.version}"   type="jar"/>
        <savant:artifact group="sapia"   projectname="utils"     name="sapia_utils"     version="1.6" type="jar"/>
		<savant:artifact group="log4j"   projectname="log4j"     name="log4j"           version="1.2.8" type="jar"/>
     </savant:artifactgroup>
      
      <savant:artifactgroup id="runtime_libs">
        <!-- soto -->                
        <savant:artifact group="sapia"   projectname="soto"      name="sapia_soto"      version="3.1.1" type="jar"/>
        <savant:artifact group="sapia"   projectname="utils"     name="sapia_utils"     version="1.6" type="jar"/>
        <savant:artifact group="sapia"   projectname="corus_iop" name="sapia_corus_iop" version="${corus.iop.version}"   type="jar"/>
        <savant:artifact group="sapia"   projectname="corus_iop" name="sapia_corus_iop_api" version="${corus.iop.version}"   type="jar"/>
        <savant:artifact group="ant"     projectname="ant"       name="ant"             version="1.7.1" type="jar"/>
        <savant:artifact group="dom4j"   projectname="dom4j"     name="dom4j"           version="1.6"   type="jar"/>
        <savant:artifact group="log4j"   projectname="log4j"     name="log4j"           version="1.2.8" type="jar"/>
        <savant:artifact group="logkit"  projectname="logkit"    name="logkit"          version="2.0"   type="jar"/>
        <savant:artifact group="piccolo" projectname="piccolo"   name="piccolo"         version="1.0.4" type="jar"/>
        <savant:artifact group="jdbm"    projectname="jdbm"      name="jdbm"            version="0.12"  type="jar"/>
        <savant:artifact group="jdring"  projectname="jdring"    name="jdring"          version="1.0"   type="jar"/>
        <savant:artifact group="trove"   projectname="trove"     name="trove"           version="1.0.2" type="jar"/>
        <savant:artifact group="xerces"  projectname="xerces"    name="xmlParserAPIs"   version="2.6.2" type="jar"/>
        <savant:artifact group="commons-logging" projectname="commons-logging" name="commons-logging" version="1.0.4" type="jar" />
        <savant:artifact group="commons-lang"    projectname="commons-lang"    name="commons-lang"    version="2.3"   type="jar" />

        <!-- ubik -->        
        <savant:artifact group="concurrent" projectname="concurrent" name="concurrent"     version="1.3.4" type="jar" />
        <savant:artifact group="sapia"      projectname="archie"     name="sapia_archie"   version="1.0.1" type="jar" />
        <savant:artifact group="sapia"      projectname="ubik"       name="sapia_ubik"     version="2.5.1" type="jar" />
        <savant:artifact group="sapia"      projectname="console"    name="sapia_console"  version="1.3"   type="jar" />
        <savant:artifact group="sapia"      projectname="resource"   name="sapia_resource" version="1.1"   type="jar" />  
        <savant:artifact group="simpleweb"  projectname="simple"     name="simple"         version="2.6"   type="jar" />
		
      	<!-- misc -->
        <savant:artifact group="sun"  projectname="activation"     name="activation"  version="1.0.2"   type="jar" />
        <savant:artifact group="misc"  projectname="syslog4j"      name="syslog4j"  version="0.9.30-bin"   type="jar" />        	
      	
      </savant:artifactgroup>
      
      <savant:artifactgroup id="magnet_libs">
        <savant:artifact group="sapia" projectname="magnet"    name="sapia_magnet"    version="1.0.1" type="jar" />
        <savant:artifact group="sapia" projectname="corus_iop" name="sapia_corus_iop" version="${corus.iop.version}"   type="jar" />
        <savant:artifact group="sapia" projectname="utils"     name="sapia_utils"     version="1.6" type="jar" />
        <savant:artifact group="sapia" projectname="console"   name="sapia_console"   version="1.3"   type="jar" />
        <savant:artifact group="log4j" projectname="log4j"     name="log4j"           version="1.2.8" type="jar" />
        <savant:artifact group="piccolo" projectname="piccolo" name="piccolo"         version="1.0.4" type="jar" />
        <savant:artifact group="bsh" projectname="bsh"         name="bsh"             version="1.2b7" type="jar" />
        <savant:artifact group="ant" projectname="ant"         name="ant"             version="1.7.1" type="jar" />
        <savant:artifact group="jdom" projectname="jdom"       name="jdom"            version="1.0b9" type="jar" />
      </savant:artifactgroup>      
      
      <savant:artifactgroup id="vm_boot_libs">
        <savant:artifact group="sapia" projectname="corus_iop" name="sapia_corus_iop_api" version="${corus.iop.version}"   type="jar" />      
        <savant:artifact group="sapia"   projectname="utils"   name="sapia_as"    version="1.6" type="jar" />
      </savant:artifactgroup>

      <savant:workflow>
          <savant:savantprocess defaultdomain="http://www.sapia-oss.org/savant"/>
          <savant:mavenprocess defaultdomain="http://www.ibiblio.org/maven"/>            
      </savant:workflow>
    </savant:dependency>
    <savant:artifactcopy todir="${project.libraryDir}" flatten="true">
      <savant:artifactgroup refid="runtime_libs" />
    </savant:artifactcopy>
    <savant:artifactcopy todir="${project.magnet-libraryDir}" flatten="true">
      <savant:artifactgroup refid="magnet_libs" />
    </savant:artifactcopy>    
    <savant:artifactcopy todir="${project.demo-libraryDir}" flatten="true">
      <savant:artifactgroup refid="demo_libs" />
    </savant:artifactcopy>    
    <savant:artifactcopy todir="${project.savantDir}" flatten="true">
      <savant:artifactgroup refid="buildtime_libs" />
    </savant:artifactcopy>    
    <savant:artifactcopy todir="${project.vmBootLibDir}" flatten="true">
      <savant:artifactgroup refid="vm_boot_libs" />
    </savant:artifactcopy>        
    </target>
</project>