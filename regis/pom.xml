<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <name>Sapia Regis Global POM</name>
  <url>http://www.sapia-oss.org/projects/regis/index.html</url>

  <groupId>org.sapia</groupId>
  <artifactId>sapia_regis_global</artifactId>
  <version>3.7</version>

  <parent>
    <groupId>org.sapia</groupId>
    <artifactId>sapia_global</artifactId>
    <version>1.21</version>
  </parent>

  <licenses>
    <license>
      <name>Apache 2</name>
        <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
     </license>
  </licenses>

  <packaging>pom</packaging>

  <modules>
    <module>core</module>
    <module>maven</module>
    <module>sample/config</module>
    <module>sample/spring</module>
  </modules>

  <build>
    <finalName>${artifactId}-${version}</finalName>
    <testOutputDirectory>target/test-classes</testOutputDirectory>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <forkMode>pertest</forkMode>
          <argLine>-enableassertions</argLine>
          <excludes>
            <exclude>**/Test**</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.sapia</groupId>
        <artifactId>sapia_regis</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.sapia</groupId>
        <artifactId>sapia_regis_sample_conf</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.sapia</groupId>
        <artifactId>sapia_resource</artifactId>
        <version>1.3</version>
      </dependency>
      <dependency>
        <groupId>org.sapia</groupId>
        <artifactId>sapia_utils</artifactId>
        <version>2.2</version>
      </dependency>       
	    <dependency>
	      <groupId>c3p0</groupId>
	      <artifactId>c3p0</artifactId>
	      <version>0.9.1</version>
	      <optional>true</optional>
	    </dependency>
      <dependency>
        <groupId>org.apache.ant</groupId>
        <artifactId>ant</artifactId>
        <version>1.8.0</version>
        <optional>true</optional>
      </dependency>
      <dependency>
          <groupId>org.hibernate</groupId>
          <artifactId>hibernate</artifactId>
          <version>3.1</version>
          <optional>true</optional>
      </dependency>
      <dependency>
          <groupId>org.hsqldb</groupId>
          <artifactId>hsqldb</artifactId>
          <version>2.0.0</version>
          <optional>true</optional>
      </dependency>
      <dependency>
        <groupId>org.sapia</groupId>
        <artifactId>sapia_ubik</artifactId>
        <version>3.7</version>
        <optional>true</optional>
      </dependency>
      <dependency>
        <groupId>org.simpleframework</groupId>
        <artifactId>simple</artifactId>
        <version>5.1.1</version>
        <optional>true</optional>        
      </dependency>      
      <dependency>
        <groupId>prevayler</groupId>
        <artifactId>prevayler</artifactId>
        <version>2.02.005</version>
        <optional>true</optional>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-plugin-api</artifactId>
        <version>2.0</version>
        <optional>true</optional>      
      </dependency>
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-core</artifactId>
        <version>3.0.5.RELEASE</version>
        <optional>true</optional>      
      </dependency>
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-context</artifactId>
        <version>3.0.5.RELEASE</version>
        <optional>true</optional>      
      </dependency>
    </dependencies> 
  </dependencyManagement> 


  <scm>
    <connection>scm:svn:https://sapia.googlecode.com/sapia_regis_global-3.7</connection>
    <developerConnection>scm:svn:https://sapia.googlecode.com/svn/tags/sapia_regis_global-3.7</developerConnection>
    <url>scm:svn:https://sapia.googlecode.com/svn/sapia_regis_global-3.7</url>
  </scm>
</project>
