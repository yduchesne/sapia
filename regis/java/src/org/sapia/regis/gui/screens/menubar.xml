<swing:JMenuBar xmlns:swing="java:swing"
                xmlns:gumby="gumby:swing">
  <swing:JMenu>
    <text>File</text>
    
    <swing:JMenuItem>
	  <text>Load to Root</text>
      <actionListener>
        <gumby:Proxy implements="java.awt.event.ActionListener">
          <method name="actionPerformed">
            import java.awt.event.*;
            import org.sapia.regis.gui.*;
            import org.sapia.regis.gui.task.*;

            task = new LoadConfigTask();              
            GlobalContext.getInstance().dispatchTask(task);
          </method>
        </gumby:Proxy>  
      </actionListener>     
	</swing:JMenuItem>
	
    <separator/>  
    
	<swing:JMenuItem>
	  <text>Exit</text>
      <actionListener>
        <gumby:Proxy implements="java.awt.event.ActionListener">
          <method name="actionPerformed">
            frame = RenderContext.getEnv().acquire("FRAME", "widgets");
            frame.dispose();
            System.exit(0);
          </method>
        </gumby:Proxy>  
      </actionListener>      
	</swing:JMenuItem>  
	      
  </swing:JMenu>
</swing:JMenuBar>