<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    
    <!-- bin -->
    <fileSet>
       <directory>bin</directory>
       <includes>
          <include>jndi.sh</include>
       </includes>
       <fileMode>0777</fileMode>
    </fileSet>
    
    <!-- lib -->
    <fileSet>
       <directory>lib</directory>
       <includes>
          <include>**/*</include>
       </includes>
    </fileSet>

    <fileSet>
       <directory>target</directory>
       <outputDirectory>lib</outputDirectory>
       <includes>
          <include>sapia_ubik-*.jar</include>
       </includes>
       <excludes>
          <exclude>sapia_ubik-*-examples.jar</exclude>
       </excludes>
    </fileSet>

  </fileSets>
  
</assembly>
