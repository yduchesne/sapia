<magnet xmlns="http://schemas.sapia-oss.org/magnet/core/"
        name="Ubik client" description="Starts a Ubik client">
        
  <launcher type="java" name="UbikClient" 
            mainClass="org.sapia.soto.SotoMain"
            args="${soto.home}/etc/ubikClientSample.xml">

      <profile name="default">
          <classpath>
            <path directory="${soto.home}/lib">
              <include pattern="**/*.jar" />
            </path>
            <path directory="${soto.home}/dist">
              <include pattern="*.jar" />
            </path>
          </classpath>
      </profile>
  </launcher>  
  
</magnet>      
